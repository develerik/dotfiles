{
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "dotbot/**/*": true,
    "spotify/themes/**/*": true
  },
  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "gitlens.codeLens.scopes": [
      "document"
    ],
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    }
  }
}
